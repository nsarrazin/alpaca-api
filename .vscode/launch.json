    "version": "0.2.0",
    "configurations": [
        {
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "name": "Docker: Python",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/usr/src/app"
                    }
                ]
            }
        },
        {
            "name": "Python: Remote Attach",
            "type": "debugpy",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/src/app"
                }
            ]
        }
    ]
}